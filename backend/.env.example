# Django Core
DJANGO_SECRET_KEY=your-secret-key-here-generate-with-get-secret-key-command
DEBUG=1
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
USE_SQLITE=1

# PostgreSQL (Production)
POSTGRES_DB=edu_db
POSTGRES_USER=edu_user
POSTGRES_PASSWORD=change_this_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# JWT Configuration
ACCESS_TOKEN_MINUTES=60
REFRESH_TOKEN_DAYS=7

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://localhost:8081

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=1
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@edumanage.com

# Payment Gateway (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# External Services
SENTRY_DSN=
REDIS_URL=redis://localhost:6379/0

# SMS Gateway (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,csv

# Frontend URL
FRONTEND_URL=http://localhost:8082
PASSWORD_RESET_TIMEOUT=3600

# Application Features
ENABLE_EMAIL_VERIFICATION=1
ENABLE_SMS_NOTIFICATIONS=0
ENABLE_PAYMENT_GATEWAY=1

# Backup Configuration
BACKUP_DIR=backups
BACKUP_RETENTION_DAYS=30

# Academic Year
CURRENT_ACADEMIC_YEAR=2024-2025
ACADEMIC_YEAR_START_MONTH=7

# Fee Settings
DEFAULT_CURRENCY=USD
CURRENCY_SYMBOL=$
LATE_FEE_PERCENTAGE=5
FEE_DUE_REMINDER_DAYS=7,3,1

# Library Settings
DEFAULT_BORROW_DAYS=14
LIBRARY_FINE_PER_DAY=5

# Exam & Grading
DEFAULT_PASSING_PERCENTAGE=40
GRADE_CALCULATION_METHOD=percentage

# System Defaults
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,hi

# Security (Production)
SECURE_SSL_REDIRECT=0
SESSION_COOKIE_SECURE=0
CSRF_COOKIE_SECURE=0
SECURE_HSTS_SECONDS=0
